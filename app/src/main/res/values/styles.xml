<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="mainBtn" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="parking_name" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="noAnimTheme" parent="AppTheme"></style>

    <style name="editText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="label" parent="TextAppearance.AppCompat.Large">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="action_button" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
